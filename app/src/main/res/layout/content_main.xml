<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.william.sxcattendance.AttendancePage.AttendanceActivity"
    android:background="#3193D4"
    tools:showIn="@layout/app_bar_main">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="March 10th 2018"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textColor="@color/present"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:paddingLeft="8dp"
                                android:textColor="@color/textColor"
                                android:text="BSC.CSIT"
                                android:layout_weight="1.1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:gravity="bottom"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.9"
                                android:text="5th semester"
                                android:paddingLeft="8dp"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                />



                        </LinearLayout>

                        <TextView
                            android:id="@+id/total_student"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@color/textColor"
                            android:text="46"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:text="Students"
                            android:gravity="center|start"
                            android:paddingLeft="2dp"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            />


                    </LinearLayout>



                </LinearLayout>



            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.5">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/present_number"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/square"
                            android:layout_gravity="center"
                            android:text="0"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:textColor="@android:color/white"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" PRESENT"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1.4"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            />

                        <TextView
                            android:id="@+id/absent_number"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/second_square"
                            android:layout_gravity="center"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text=" ABSENT"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:textColor="@android:color/black"
                            />


                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.6"
                        android:layout_margin="12dp"
                        >

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
z


            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="2"
            android:padding="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/link"
                android:layout_weight="0.5"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/link"
                android:layout_weight="1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
