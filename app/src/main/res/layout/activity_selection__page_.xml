<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.william.sxcattendance.Login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sxc_bg"
                android:scaleType="centerCrop"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:background="@drawable/grad_bg">

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear"
            android:layout_below="@id/first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="14dp"
            android:background="#fff"
            android:orientation="vertical"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.9">

                <ImageView
                    android:id="@+id/ImageLogo"
                    android:transitionName="image"
                    android:padding="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/college_logo"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="0.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="0.6">

                    <Button
                        android:id="@+id/bsc_csit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn"
                        android:layout_weight="1"
                        android:text="BSc.CSIT "
                        android:paddingBottom="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        />

                    <Button
                        android:id="@+id/bim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="BIM"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/btn"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_for_fragment_replace"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1.4">




                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <Button
                    android:id="@+id/login"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn"
                    android:text="Select"
                    android:textColor="@android:color/white"

                    />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
